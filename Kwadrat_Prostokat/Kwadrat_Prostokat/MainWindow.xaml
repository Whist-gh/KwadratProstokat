            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="5" HorizontalAlignment="Center" Height="39" TextWrapping="Wrap" Text="Kwadrat" VerticalAlignment="Center" Width="800" TextAlignment="Center" FontSize="30" Foreground="Black" Background="Gray"/>
