        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Bok kwadratu:" VerticalAlignment="Center" RenderTransformOrigin="-0.622,0.52" Height="21" Width="87"/>
