        <TextBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,7,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,7,0,0" Grid.Row="2" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
        <Button Grid.Column="3" Content="Oblicz Pole" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1" VerticalAlignment="Top" Height="103" Grid.RowSpan="3" Width="114"/>
        <Button Grid.Column="4" Content="Oblicz obwód" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1" VerticalAlignment="Top" Height="103" Grid.RowSpan="3" Width="113"/>
        <Border Background="Teal" HorizontalAlignment="Left" Height="99" Margin="64,31,0,0" Grid.Row="5" VerticalAlignment="Top" Width="152" Grid.RowSpan="4"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" TextWrapping="Wrap" Text="Bok prostokąta:" VerticalAlignment="Center" RenderTransformOrigin="-0.622,0.52" Height="21" Width="101"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="6" TextWrapping="Wrap" Text="Bok prostokąta:" VerticalAlignment="Top" RenderTransformOrigin="-0.622,0.52" Height="21" Width="101"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="7" TextWrapping="Wrap" Text="Pole prostokąta:" VerticalAlignment="Center" RenderTransformOrigin="-0.622,0.52" Height="20" Width="101"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="8" TextWrapping="Wrap" Text="Obwód prostokąta:" VerticalAlignment="Center" RenderTransformOrigin="-0.622,0.52" Height="20" Width="113"/>
