        <TextBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="6" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Height="22"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="7" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="24"/>
        <TextBox Grid.Column="2" HorizontalAlignment="Center" Grid.Row="8" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="24"/>
        <Button Grid.Column="3" Content="Oblicz Pole" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="5" VerticalAlignment="Top" Height="103" Grid.RowSpan="3" Width="114"/>
        <Button Grid.Column="4" Content="Oblicz obwód" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Top" Height="103" Width="113" Margin="0,10,0,0" Grid.RowSpan="3"/>

